<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <ImageView

        android:id="@+id/iv_web_ima"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_toRightOf="@+id/iv_web_ima"
        android:id="@+id/tv_web_title"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:textColor="#c22dd91a"
        android:textSize="20sp" />

    <TextView
        android:layout_toRightOf="@+id/iv_web_ima"
        android:layout_below="@+id/tv_web_title"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#31ae86"
        android:id="@+id/tv_web_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp" />
</RelativeLayout>
